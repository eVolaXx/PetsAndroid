<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ListaAmigosActivity">


    <TextView
            android:id="@+id/todos_los_amigos"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:text="Amigos"
            android:textColor="@color/cardview_light_background"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="16dp" android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lista_de_amigos"
            android:layout_below="@+id/todos_los_amigos"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_alignParentStart="true"
            android:layout_marginStart="5dp" android:layout_alignParentTop="true" android:layout_marginTop="44dp"/>


</RelativeLayout>