<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SetupActivity">

    <TextView
            android:text="Foto de perfil"
            android:layout_width="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_alignParentTop="true"
            android:layout_marginTop="91dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="202dp"
            android:layout_height="208dp"
            android:src="@drawable/fondo_animales"
            android:layout_centerHorizontal="true"
            android:id="@+id/imagen_usuario"
    />

    <LinearLayout
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:layout_margin="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginStart="0dp"
            android:layout_below="@+id/imagen_usuario">


        <EditText
                android:id="@+id/nombre_usuario"
                android:padding="7dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:hint="Usuario"/>
        <EditText
                android:id="@+id/nombre_mascota"
                android:padding="7dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:hint="Nombre del perro"/>
        <EditText
                android:id="@+id/raza_mascota"
                android:padding="7dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:hint="Raza "/>
        <EditText
                android:id="@+id/ciudad"
                android:padding="7dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:hint="Ciudad"/>


    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/button_guardar"
            android:src="@drawable/add"
            android:layout_marginEnd="180dp" android:layout_marginBottom="60dp"/>


</RelativeLayout>