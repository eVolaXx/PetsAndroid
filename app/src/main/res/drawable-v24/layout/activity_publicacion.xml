<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00BFA5">



    <include
            layout="@layout/app_bar_layout"
            android:id="@+id/new_post_bar_layout">

    </include>
    <RelativeLayout
            android:id="@+id/mylayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="7dp"
                android:layout_height="wrap_content" android:layout_marginStart="20dp" android:paddingStart="5dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:src="@drawable/profile"
                        android:layout_height="40dp"
                        android:id="@+id/imagen_usuario_new_post"
                />

                <TextView
                        android:id="@+id/usuario_new_post"
                        android:text="Usuario: "
                        android:layout_marginStart="10dp"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />


            </LinearLayout>
        </LinearLayout>


        <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignParentEnd="true" android:layout_alignParentTop="true"
                android:layout_marginEnd="-2dp"
                android:id="@+id/select_post_image" android:layout_marginTop="121dp" android:background="#C3FFFFFF"/>

        <Button
                android:text="Publicar"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true" android:layout_marginEnd="160dp"
                android:layout_alignParentBottom="true" android:id="@+id/button_publicar"
                android:layout_marginBottom="29dp"
                android:background="#64DD17"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:gravity="start|top"
                android:ems="10"
                android:layout_alignParentEnd="true" android:layout_alignParentTop="true"
                android:layout_marginEnd="95dp"
                android:id="@+id/descripcion_new_post" android:layout_marginTop="74dp"
                android:hint="Que estas pensando"/>

    </RelativeLayout>




</RelativeLayout>
